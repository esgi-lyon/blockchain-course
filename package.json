{
  "name": "blockhain-course",
  "version": "1.0.0",
  "description": "",
  "main": "truffle.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "lite-server",
    "compile": "truffle compile",
    "deploy:ropsten": "truffle deploy --network ropsten",
    "deploy:ropsten:overwrite": "npm run deploy:ropsten --reset --compile-all",
    "verify:ropsten": "truffle run verify --network ropsten",
    "console:ropsten": "truffle console --network ropsten",
    "deploy:test": "npx truffle deploy --network development",
    "test:start": "npm run deploy:test && npx truffle test",
    "ganache": "node ganache.js",
    "test": "concurrently -P -k \"npm:ganache\" \"npm:test:start\""
  },
  "author": "Loic Roux",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^7.4.0",
    "lite-server": "^2.3.0",
    "truffle-plugin-verify": "^0.5.28"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.3",
    "ganache": "^7.4.3",
    "truffle": "^5.5.30",
    "truffle-hdwallet-provider": "^1.0.6"
  }
}
